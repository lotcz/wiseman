<Window x:Class="SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WisemanWindowsClient"
        mc:Ignorable="d" Style="{StaticResource BasicWindowStyle}"
        Title="SettingsWindow" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Name="ThemeSelectionButtons" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton Name="WhiteThemeButton" Tag="White" >
                <RadioButton.Content>
                    <TextBlock Text="White" />
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Content="Black" Tag="Black" Name="BlackThemeButton" />
            <RadioButton Content="Blue" Tag="Blue" Name="BlueThemeButton" />
        </StackPanel>
    </Grid>
</Window>
