<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WisemanWindowsClient">

    <Color x:Key="BasicBorderColor">#FF3FA0F7</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF101930"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFD0D0FF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BasicBorderColor}"/>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF161e3f"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FF3FA0F7"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FF3FA0F7"/>
    
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#FF3FA0F7"/>
    <SolidColorBrush x:Key="ButtonHoverForegroundBrush" Color="#FF161e3f"/>
    <SolidColorBrush x:Key="ButtonHoverBorderBrush" Color="#FFDE3FF7"/>

    <SolidColorBrush x:Key="LinkButtonForegroundBrush" Color="#FFD0D0FF"/>
    
</ResourceDictionary>
