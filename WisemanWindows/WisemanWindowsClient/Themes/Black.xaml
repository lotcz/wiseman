<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WisemanWindowsClient">

    <Color x:Key="BasicBorderColor">#FFE0E0E0</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FF232323"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BasicBorderColor}"/>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF232323"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FFE0E0E0"/>

    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#FFE0E0E0"/>
    <SolidColorBrush x:Key="ButtonHoverForegroundBrush" Color="#FF232323"/>
    <SolidColorBrush x:Key="ButtonHoverBorderBrush" Color="#FFE0E0E0"/>

    <SolidColorBrush x:Key="LinkButtonForegroundBrush" Color="#FFE0E0E0"/>
    
</ResourceDictionary>
