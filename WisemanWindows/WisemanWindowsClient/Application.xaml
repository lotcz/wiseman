<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WisemanWindowsClient"
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="{x:Type Window}" x:Key="BasicWindowStyle">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrushColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrushColor}"/>
        </Style>

    </Application.Resources>
</Application>
